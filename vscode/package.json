{
	"name": "dylan-lsp",
	"description": "Client for VSCode",
	"author": "Peter",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "peter",
	"repository": {
		"type": "git",
		"url": "https://github.com/pedro-w/lsp-dylan"
	},
	"engines": {
		"vscode": "^1.33.0"
	},
	"scripts": {
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"update-vscode": "vscode-install",
		"postinstall": "vscode-install",
		"lint": "eslint **/*.ts"
	},
	"activationEvents": [
		"onLanguage:dylan"
	],
	"contributes": {
		"configuration": {
			"title": "Dylan",
			"properties": {
				"dylan.trace.server": {
					"type": "string",
					"enum": [
						"off",
						"verbose",
						"messages"
					],
					"default": "off",
					"description": "Activate tracing"
				},
				"dylan.project": {
					"type": "string",
					"description": "Sets the name of the current project"
				}
			}
		},
		"languages": [
			{
				"id": "dylan",
				"aliases": [
					"Dylan",
					"dylan"
				],
				"extensions": [
					".dylan",
					".lid"
				]
			}
		]
	},
	"main": "out/dylan",
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.23",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"eslint": "^7.5.0",
		"typescript": "^3.9.7"
	}
}
